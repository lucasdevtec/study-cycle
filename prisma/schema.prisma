generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int        @id @default(autoincrement())
  email             String     @unique
  name              String?    
  nickname          String?    
  horasCiclo        Int?    
  materias          Materia[]
}

model Materia {
  id                Int        @id @default(autoincrement())
  nome              String     @unique
  peso              Int
  dificuldade       Int
  horasTotais       Int?
  horasConcluidas   Int?
  usuarioDetentor   User @relation(fields: [idUsuario], references: [id])
  idUsuario         Int
} 
